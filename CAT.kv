#:import SwapTransition kivy.uix.screenmanager.SwapTransition

BoxLayout:
	orientation: 'vertical'

	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'data\\bg.jpg'
	ScreenManager:
		id: sm
		on_current_screen:
			idx = app.screen_names.index(args[1].name)
			if idx > -1: app.hierarchy.append(idx)

	Button:
		text: 'Back'
		font_size: 20
		size_hint: None, None
		height: 40
		pos_hint: {'left': 0, 'bottom': 0}
		color: [0.33, 0.5, 1, 1]
		on_press:
			root.manager.transition.direction = 'right'
			app.manager.current = 'main'
	ToggleButton:
		text: 'Advanced'
		font_size: 20
		size_hint: None, None
		height: 40
		pos_hint: {'right': 1, 'bottom': 0}
		color: [0.33, 0.5, 1, 1]
		on_press:
			root.manager.transition = SwapTransition()
			root.manager.current = 'advanced'
		
<MyScreen>:
	StackLayout:
		id: btnstack
		padding: 35
		spacing: 10


