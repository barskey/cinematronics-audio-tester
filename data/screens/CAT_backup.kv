#:import SwapTransition kivy.uix.screenmanager.SwapTransition

ScreenManager:
	id: sm
	MainScreen:
	GamesScreen:
	SoundsScreen:
	AdvSoundsScreen:

<MainScreen>:
    name: 'main'
	AsyncImage:
		source: 'bg.jpg'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Cinematronics Audio Tester'
            font_size: 30
			bold: True
			color: [0.33, 0.5, 1, 1]
		BoxLayout:
            orientation: 'horizontal'
            AnchorLayout:
                Button:
                    text: 'Settings'
                    font_size: 20
					bold: True
                    size_hint: None, None
                    height: 50
                    anchor: 'center'
            AnchorLayout:
                Button:
                    text: 'Games'
                    font_size: 20
					bold: True
                    size_hint: None, None
                    height: 50
                    anchor: 'center'
                    on_press:
						root.manager.transition.direction = 'left'
						root.manager.current = 'games'

<GameButton>:
	font_size: 20
	size_hint: None, None
	height: 50
	width: 130
	on_press:
		app.root.transition.direction = 'left'
		app.root.current = 'sounds'

<SoundButton>:
	font_size: 20
	size_hint: None, None
	height: 50
	width: 130
	on_press:
		app.play_sound(self.id)
		
<GamesScreen>:
    name: 'games'
	id: gamescreen
	AsyncImage:
		source: 'bg.jpg'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Select A Game'
			bold: True
			font_size: 30
			size_hint_y: None
			height: 40
			color: [0.33, 0.5, 1, 1]
		StackLayout:
			id: btnstack
			padding: 35
			spacing: 10
		Button:
			text: 'Back'
			font_size: 20
			size_hint: None, None
			height: 40
			pos_hint: {'left': 0, 'bottom': 0}
			color: [0.33, 0.5, 1, 1]
			on_press:
				root.manager.transition.direction = 'right'
				root.manager.current = 'main'

<SoundsScreen>:
    name: 'sounds'
	AsyncImage:
		source: 'bg.jpg'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Select A Sound To Activate'
			bold: True
			font_size: 30
			size_hint_y: None
			height: 40
			color: [0.33, 0.5, 1, 1]
		StackLayout:
			id: btnstack
			padding: 35
			spacing: 10
		RelativeLayout:
			Button:
				text: 'Back'
				font_size: 20
				size_hint: None, None
				height: 40
				pos_hint: {'left': 0, 'bottom': 0}
				color: [0.33, 0.5, 1, 1]
				on_press:
					root.manager.transition.direction = 'right'
					root.manager.current = 'games'
			ToggleButton:
				text: 'Advanced'
				font_size: 20
				size_hint: None, None
				height: 40
				pos_hint: {'right': 1, 'bottom': 0}
				color: [0.33, 0.5, 1, 1]
				on_press:
					root.manager.transition = SwapTransition()
					root.manager.current = 'advanced'

<AdvSoundsScreen>:
    name: 'advanced'
	AsyncImage:
		source: 'bg.jpg'
	BoxLayout:
		orientation: 'vertical'
		Label:
			text: 'Advanced Sound Mode'
			bold: True
			font_size: 30
			size_hint_y: None
			height: 40
			color: [0.33, 0.5, 1, 1]
		StackLayout:
			id: btnstack
			padding: 35
			spacing: 10
		RelativeLayout:
			Button:
				text: 'Back'
				font_size: 20
				size_hint: None, None
				height: 40
				pos_hint: {'left': 0, 'bottom': 0}
				color: [0.33, 0.5, 1, 1]
				on_press:
					root.manager.transition.direction = 'right'
					root.manager.current = 'games'
			ToggleButton:
				text: 'Advanced'
				font_size: 20
				size_hint: None, None
				height: 40
				pos_hint: {'right': 1, 'bottom': 0}
				color: [0.33, 0.5, 1, 1]
				on_press:
					root.manager.transition = SwapTransition()
					root.manager.current = 'advanced'
